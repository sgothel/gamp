#if __VERSION__ >= 130
  #define attribute in
  #define varying out
#endif

uniform mat4    gcu_PMVMatrix[2]; // P, Mv
attribute vec4  gca_Vertex;
attribute vec4  gca_Color;

varying   vec4  gcv_frontColor;

void main(void)
{
  gcv_frontColor = gca_Color;
  gl_Position = gcu_PMVMatrix[0] * gcu_PMVMatrix[1] * gca_Vertex;
}
